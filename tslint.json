{
  "extends": "tslint:recommended",
  "rules": {
    "object-literal-sort-keys": false,
    "no-any": { "severity": "warning" },
    "arrow-parens": false,
    "interface-name": [false, "never-prefix"],
    "trailing-comma": [false, { "multiline": "never", "singleline": "never" }],
    "quotemark": [true, "double", "jsx-double"],
    "ordered-imports": [false, {}],
    "semicolon": [false, "always"],
    "no-var-requires": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "ban-types": [true, ["Object", "Use {} instead."], ["String"]],
    "no-empty-interface": false
  },
  "jsRules": {},
  "rulesDirectory": []
}
